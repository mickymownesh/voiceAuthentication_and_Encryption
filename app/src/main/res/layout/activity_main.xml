<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/textViewEnterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:text="Your Display Name is :"
        android:textColor="@color/RegisterBtn"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <TextView
            android:id="@+id/editTextDisplayName"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:background="@drawable/namedisp"
            android:textColor="@color/RegisterBtn"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"

            android:textSize="18dp"
            >

            <requestFocus />
        </TextView>

        <Button
            android:id="@+id/buttonStart"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submitName" />
    </LinearLayout>

        <TextView
            android:id="@+id/textViewSelectContact"
            android:textColor="@color/RegisterBtn"
            android:layout_marginTop="40dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectContact"
            android:visibility="invisible" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="@string/update"
                android:textColor="#ffff"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custombtn1"
                android:visibility="invisible"
                />
	    
            <Button
	            android:id="@+id/buttonCall"
                android:textColor="#ffff"
	            android:layout_width="110dp"
	            android:layout_height="45dp"
	            android:text="@string/call"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custombtn1"
                android:visibility="invisible"

	             />
	 	</LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        >

        <RadioGroup
            android:id="@+id/contactList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            >

        </RadioGroup>
    </ScrollView>

</LinearLayout>