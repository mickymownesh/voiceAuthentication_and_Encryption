<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.thielegram.loomorec">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"


        android:supportsRtl="true"

        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DirectoryActivity"
            android:label="@string/title_registered_speakers"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".IdentificationActivity"
            android:label="@string/title_identify_speaker"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_add_speaker"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>